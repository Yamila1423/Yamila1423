class Pelicula:
    def __init__(self, titulo, director, a√±o, genero):
        self.titulo = titulo
        self.director = director
        self.a√±o = a√±o
        self.genero = genero

class CatalogoPeliculas:üìº
    def __init__(self):
        self.peliculas = []

    def agregar_pelicula(self, pelicula):
        self.peliculas.append(pelicula.__dict__)

    def guardar_catalogo(self, archivo):
        with open(archivo, "w") as f:
            json.dump(self.peliculas, f)

    def cargar_catalogo(self, archivo):
        try:
            with open(archivo, "r") as f:
                self.peliculas = json.load(f)
        except FileNotFoundError:
            print("El archivo no existe")

    def mostrar_catalogo(self):
        for pelicula in self.peliculas:
            print(f"T√≠tulo: {pelicula['titulo']}")
            print(f"Director: {pelicula['director']}")
            print(f"A√±o: {pelicula['a√±o']}")
            print(f"G√©nero: {pelicula['genero']}")
            print("------------------------")

# Crear un cat√°logo de pel√≠culas
